head
	include ../includes/blockviewer

body	
	div.navbar
		div.navbar-inner
			div.container
				a(href='#').brand Block Viewer
				ul.nav
					li
						a(href='#faq') FAQ
					li  
						a(href='#api') API
				form#search.navbar-search.pull-right.form-inline
					button(id='btnClear').btn Clear
					input(id='txtInput')(type='text')(placeholder='Address / SHA hash / height')(style='width:500px').search-query	
					div.btn-group.pull-right.form-inline
						button(data-toggle='dropdown')(id='btnSubmit')(data-loading-text='Loading...')(data-complete-text='Search')(href='#').btn.dropdown-toggle.btn-primary.btn-large Search
							span.caret
						ul.dropdown-menu
							li
								a(href='#addr') Address							
							li
								a(href='#block') Block						
							li
								a(href='#ipv4') IPv4
							li								
								a(href='#owns') Owner Address
							li
								a(href='#trans') Transaction
													
	div(id='v')
	script
		app();
	
div.modal.hide#groupModal
	div.modal-header
		button(type='button')(data-dismiss='modal').close x
		h3#txtGroupModalTitle
	div.modal-body
		table(cellpadding='0')(cellspacing='0')(border='0').table.table-bordered#tblGroup
	div.modal-footer		
		a(href='#')(id='btnModalSelect').btn.btn-primary Select
		a(data-dismiss='modal')(href='#').btn.danger Select None
		